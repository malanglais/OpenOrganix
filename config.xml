<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.ionicframework.openorganix521109" 
  version="0.0.1" xmlns="http://www.w3.org/ns/widgets" 
  xmlns:cdv="http://cordova.apache.org/ns/1.0" 
  xmlns:gap="http://phonegap.com/ns/1.0">
  <name>OpenOrganix</name>
  <description>
        OpenOrganix - Schedule Viewer for Android
    </description>
  <author email="malanglais@pyxis-tech.com" href="http://ionicframework.com/">
      Marc-Andr√© Langlais
    </author>
  <preference name="android-build-tool" value="gradle"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="android-minSdkVersion" value="16"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="3000"/>
  <gap:plugin name="cordova-plugin-calendar" source="npm"/>
  <gap:plugin name="cordova-plugin-whitelist" source="npm"/>
  <preference name="LoadingDialog" value="My Title,My Message"/>
  <content src="index.html"/>
  <access origin="http://lcrse.qc.ca/cedules.saison.aspx"/>
  <allow-navigation href="http://*/*"/>
  <allow-intent href="http://*/*"/>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
  <feature name="Calendar">
    <param name="android-package" value="nl.xservices.plugins.Calendar"/>
  </feature>
  <platform name="android">
    <icon src="resources/android/icon/drawable-ldpi-icon.png" density="ldpi"/>
    <icon src="resources/android/icon/drawable-mdpi-icon.png" density="mdpi"/>
    <icon src="resources/android/icon/drawable-hdpi-icon.png" density="hdpi"/>
    <icon src="resources/android/icon/drawable-xhdpi-icon.png" density="xhdpi"/>
    <icon src="resources/android/icon/drawable-xxhdpi-icon.png" density="xxhdpi"/>
    <icon src="resources/android/icon/drawable-xxxhdpi-icon.png" density="xxxhdpi"/>
  </platform>
  <icon src="resources/android/icon/drawable-xhdpi-icon.png"/>
</widget>